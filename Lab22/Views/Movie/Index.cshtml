@{
}


<h1>It's movie time!</h1>
<br />
<h4>What do you want to watch?</h4>
<br />

<h5>*Use the search function below to find your next movie.</h5>
<hr />
<h5>Search by Genre:</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResultGenre">
            <select asp-for="Genre" asp-items="Html.GetEnumSelectList<MovieGenre>()">
                <option selected="selected" value="">Please select a genre:</option>
            </select>
            <input type="submit" class="btn btn-primary" value="Search"/>
        </form>
    </div>
</div>
<hr />
<h5>Search by Title:</h5>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchResultTitle">
            <input asp-for="Title"/>
            <input type="submit" class="btn btn-primary" value="Search" />
        </form>
    </div>
</div>